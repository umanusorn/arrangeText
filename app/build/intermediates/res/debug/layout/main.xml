<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainpageAncestor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/widget41"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_primary_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/cate_button"
            android:layout_width="150dip"
            android:layout_height="170dip"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/play_button_description"
            android:scaleType="fitCenter" android:src="@drawable/droidlogo_small"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="112dip"
            android:layout_height="37dip"
            android:layout_gravity="center"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/main_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/MAIN_GUIDE_TEXT"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginBottom="20dip"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_secondary_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_marginRight="30dip" android:layout_marginBottom="30dip">

    <ImageButton
            android:id="@+id/download_button"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:visibility="gone"
            android:background="@drawable/download_button"
            android:scaleType="fitCenter" android:layout_marginRight="3dip"/>

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_button" android:layout_marginRight="3dip"/>
        
        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/help_button" />
    </LinearLayout>

    <TextView
        android:id="@+id/VersionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_primary_panel"
        android:layout_centerHorizontal="true"
        android:text="@string/VERSION"
        android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="9dip"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dip"
        android:layout_height="17dip"
        android:layout_above="@+id/VersionText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/textlogo" />

    <ImageButton
        android:id="@+id/tts_button"
        android:layout_width="80dip"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:src="@drawable/tts_button_noframe" android:layout_marginBottom="30dip" android:layout_height="40dip" android:layout_marginLeft="30dip" android:scaleType="fitCenter"/>

</RelativeLayout>

</LinearLayout>



