<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/mainLayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" android:background="@color/PINK_CHULA">



<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"

android:id="@+id/widget32"
android:layout_width="fill_parent"
android:layout_height="40dip"
android:layout_marginTop="0dip">
<ImageButton
android:id="@+id/speak_button"
android:layout_width="40dip"
android:layout_height="40dip"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true" android:background="@drawable/speak_button">
</ImageButton><ImageButton
            android:id="@+id/clear_button"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/backspace_button" android:layout_toLeftOf="@id/speak_button">

</ImageButton>


</RelativeLayout>

<HorizontalScrollView
    android:id="@+id/hscroll_cate"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:layout_gravity="fill_horizontal|center">

    <LinearLayout
        android:id="@+id/linear_cate"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/GREEN_ANDROID"
        android:orientation="horizontal" >

    </LinearLayout>
</HorizontalScrollView>

<GridView
        android:id="@+id/GridView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="0dip"
        android:numColumns="auto_fit"
        android:padding="0dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dip" android:background="#FFFFFF" android:columnWidth="70dip">
</GridView>

    <GridView
            android:id="@+id/GridPressed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="0dip"
            android:verticalSpacing="0dip"
            android:horizontalSpacing="0dip"
            android:numColumns="auto_fit"
            android:columnWidth="65dip"
            android:stretchMode="columnWidth"
            android:background="#FFFFFF"
            android:gravity="center" android:clickable="false">
    </GridView>
</LinearLayout>
