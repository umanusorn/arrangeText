<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_grid_cate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_x="200dip"
    android:layout_y="165dip"
    android:gravity="center_horizontal"
    android:paddingLeft="10dp"
    android:orientation="vertical" android:minWidth="65dip">

    <LinearLayout
        android:id="@+id/cateIconImageWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#FFFFFF" android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/cate_icon_image"
            android:layout_width="65dip"
            android:layout_height="65dip" android:layout_gravity="center_horizontal"/>

    </LinearLayout>

<TextView
    android:id="@+id/cate_icon_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textColor="@color/BLACK"
    android:textSize="14sp"
    android:textStyle="bold" >

</TextView>
</LinearLayout>
